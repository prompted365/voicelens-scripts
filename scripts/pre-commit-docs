#!/bin/bash
#
# Git pre-commit hook to automatically update LLM-DOCS-FULL.md
# when any markdown files are added or modified
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Get the repository root
REPO_ROOT=$(git rev-parse --show-toplevel)
DOCS_SCRIPT="$REPO_ROOT/scripts/concat_docs.py"
OUTPUT_FILE="$REPO_ROOT/LLM-DOCS-FULL.md"

echo -e "${BLUE}🔍 Pre-commit hook: Checking for markdown file changes...${NC}"

# Check if any markdown files are being committed
MD_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.md$' || true)

if [ -z "$MD_FILES" ]; then
    echo -e "${GREEN}✅ No markdown files changed, skipping documentation update${NC}"
    exit 0
fi

echo -e "${YELLOW}📝 Markdown files changed:${NC}"
echo "$MD_FILES" | while read -r file; do
    echo -e "   ${BLUE}•${NC} $file"
done

# Check if the documentation script exists
if [ ! -f "$DOCS_SCRIPT" ]; then
    echo -e "${RED}❌ Documentation script not found: $DOCS_SCRIPT${NC}"
    echo -e "${YELLOW}⚠️  Run 'scripts/setup_docs_hook.sh' to set up the documentation system${NC}"
    exit 0
fi

echo -e "${BLUE}🔄 Updating consolidated documentation...${NC}"

# Run the documentation concatenation script
if python3 "$DOCS_SCRIPT"; then
    echo -e "${GREEN}✅ Documentation updated successfully${NC}"
    
    # Check if LLM-DOCS-FULL.md was changed
    if [ -f "$OUTPUT_FILE" ]; then
        # Check if the file has changes
        if git diff --quiet "$OUTPUT_FILE" 2>/dev/null; then
            echo -e "${GREEN}📄 No changes to consolidated documentation${NC}"
        else
            echo -e "${YELLOW}📄 Adding updated LLM-DOCS-FULL.md to commit${NC}"
            git add "$OUTPUT_FILE"
            echo -e "${GREEN}✅ LLM-DOCS-FULL.md added to commit${NC}"
        fi
    fi
else
    echo -e "${RED}❌ Failed to update documentation${NC}"
    echo -e "${YELLOW}⚠️  Commit will proceed, but documentation may be outdated${NC}"
fi

echo -e "${GREEN}🚀 Pre-commit hook completed${NC}"
exit 0